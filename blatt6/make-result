#!/usr/bin/env python3

import sys
import os.path
import json

from unittest import output_results

PRESENT_OWN_THRESHOLD = 0.75
PRESENT_ML_THRESHOLD = 0.50

if len(sys.argv) <= 1:
    sys.exit(1)

max_points = 0
earned_points = 0

for file in sys.argv[1:]:
    with open(file, 'r') as file:
        data = json.load(file)
        max_points += data["max_points"]
        earned_points += data["points"]

assert(max_points != 0)
output_results(max_points, earned_points, [], ".result.txt")
